EMERGENCY_STOP_PIN=17

# ML Model Paths
ML_MODEL_PATH=/app/models
ML_CHECKPOINT_PATH=/app/checkpoints

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_ADMIN_PASSWORD=admin

# Development
NODE_ENV=development
PYTHON_ENV=development