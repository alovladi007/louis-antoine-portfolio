{
  "name": "power-electronics",
  "version": "1.0.0",
  "private": true,
  "description": "Advanced Power Electronics Platform for EV and Renewable Energy",
  "license": "MIT",
  "author": "Power Electronics Team",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down",
    "db:init": "docker compose exec postgres psql -U postgres -d powerelec < infra/init-sql/01-init.sql",
    "seed": "pnpm --filter api run seed"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.1.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}