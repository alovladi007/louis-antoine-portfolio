# Core Configuration
NODE_ENV=development
WEB_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=medimetrics
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DB_URL=postgres://postgres:postgres@postgres:5432/medimetrics

# Redis Queue
REDIS_URL=redis://redis:6379/0

# MinIO S3 Storage
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=medimetrics
S3_SECRET_KEY=medimetricssecret
S3_REGION=us-east-1
S3_BUCKET_RAW=medimetrics-raw
S3_BUCKET_DERIV=medimetrics-derivatives
S3_BUCKET_REPORTS=medimetrics-reports

# Orthanc DICOM Server
ORTHANC_URL=http://orthanc:8042
ORTHANC_USER=orthanc
ORTHANC_PASS=orthanc

# Security Keys (CHANGE IN PRODUCTION!)
JWT_SECRET=change-me-supersecret-jwt-key-min-32-chars
JWT_EXPIRY=7d
CSRF_SECRET=change-me-csrf-secret-key
FIELD_ENCRYPTION_KEK=auto-generate-on-first-run-32bytes
WEBHOOK_HMAC_SECRET=change-me-webhook-hmac-secret

# Rate Limiting
RATE_LIMIT=100/minute
RATE_LIMIT_WINDOW=60000

# Demo Credentials
DEMO_LOGIN=admin@demo.local
DEMO_PASSWORD=Demo123!

# Inference Service
INFERENCE_URL=http://inference:9200
INFERENCE_TIMEOUT=300000
MODEL_REGISTRY_PATH=/models
GPU_ENABLED=false

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Feature Flags
ENABLE_2FA=false
ENABLE_SIGNUP=false
ALLOWED_DOMAINS=demo.local,example.com

# Logging
LOG_LEVEL=info
LOG_REDACT_PHI=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# File Upload
MAX_FILE_SIZE=500MB
ALLOWED_FILE_TYPES=.dcm,.jpg,.jpeg,.png,.zip

# PDF Generation
PDF_LOGO_URL=/assets/logo.png
PDF_FOOTER_TEXT=Confidential Medical Information

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9100

# Development
DEBUG=false
MOCK_INFERENCE=false